<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" method="POST" enctype="multipart/form-data" action="/api/examples" id="inputform"> 
        {{!-- // enctype allows to send images --}}
          <div class="form-group">
            <label for="example-text">Brand Name</label>
            <input type="text" id="item-brand" class="form-control" aria-describedby="example-text"
              placeholder="Brand Name">
          </div>
          <div class="form-group">
            <label for="example-text">Item Type</label>
            <input type="text" id="item-type" class="form-control" aria-describedby="example-text"
              placeholder="Top / Bottom / Accessories">
          </div>
          <div class="form-group">
            <label for="example-text">Color</label>
            <input type="text" id="item-color" class="form-control" aria-describedby="example-text"
              placeholder="color">
          </div>
          <div class="form-group">
            <label for="example-text">Style</label>
            <input type="text" id="item-style" class="form-control" aria-describedby="example-text"
              placeholder="long leave/ short leave / skirt / long pants / short pants">
          </div>
          <div class="form-group">
            <label for="example-text">Price</label>
            <input type="number" id="item-price" class="form-control" aria-describedby="example-text"
              placeholder="$">
          </div>
          <div class="form-group">
            <label for="example-text">When did you last wear this item?</label>
            <input type="date" id="last-wore" class="form-control" aria-describedby="example-text"
              placeholder="MM/DD/YEAR">
          </div>
          <div class="form-group">
            <label for="example-text">Add picture</label>
            <input type="file" name="userpicture" id="input-picture" class="form-control">
          </div>
          <div class="form-group">
            <label for="example-description">Notes on this item</label>
            <textarea class="form-control" id="item-description" aria-describedby="example-description"
              placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" type="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Items in your closet:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.brand}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
